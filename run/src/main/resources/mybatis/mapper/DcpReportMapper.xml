<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xr.run.dao.inspect.DcpReportMapper">
    <resultMap id="basemap" type="com.xr.run.entity.inspect.Report">
        <result column="id" property="id"></result>
        <result column="reporttype" property="reportType"></result>
        <result column="report" property="report" ></result>
        <result column="newTime" property="newTime"></result>
        <result column="status" property="status"></result>
        <result column="url" property="url"></result>
        <result column="typeconcrete" property="typeconcrete"></result>
        <association property="eid" javaType="com.xr.run.entity.SysStaff">
            <result column="name" property="name"></result>
        </association>

    </resultMap>
    <select id="list" resultMap="basemap">
select re.id,re.reporttype,re.report,re.newtime,re.eid,re.status,h.name,re.url,re.typeconcrete from dcp_report re,Sys_Staff h where h.sid=re.eid and re.status!=-1 order by re.newtime desc
    </select>
    <select id="fintBywhere" resultMap="basemap">
        select re.id,re.reporttype,re.report,re.newtime,re.eid,re.status,h.name,re.url,re.typeconcrete from dcp_report re,Sys_Staff h where h.sid=re.eid and re.status!=-1
        <if test="reportType != null and !reportType.equals('')">
            and re.reporttype like #{reportType}</if>
        <if test="starttime != null and !starttime.equals('')">
            and re.newtime  &gt;= #{starttime}
        </if>
        <if test="endtime != null and !endtime.equals('')">
            and re.newtime  &lt;= #{endtime}
        </if>
         order by re.newtime desc
    </select>
    <insert id="addreport" parameterType="com.xr.run.dao.inspect.DcpReportMapper">
        insert into dcp_report(reportType,report,newTime,eid,status,url,typeconcrete) values(#{reportType},#{report},#{newTime},#{sid},#{status},#{url},#{typeconcrete})
    </insert>
    <update id="delReport" parameterType="Integer">
        update  dcp_report set status=-1 where id=#{id}
    </update>
    <update id="gxpost" parameterType="com.xr.run.dao.inspect.DcpReportMapper">
        update dcp_report set reportType=#{reportType},report=#{report},url=#{url},typeconcrete=#{typeconcrete} where id=#{id}
    </update>
</mapper>